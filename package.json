{
  "name": "rollup-plugin-handlebars-compiler",
  "version": "1.1.1",
  "description": "Rollup plugin to compile Handlebars templates to JavaScript with partials, helpers, and precompile options.",
  "scripts": {
    "build": "rollup --config",
    "dev": "rollup --config --watch --environment BUILD:development",
    "test": "npm run testlint && npm run testplugin-coverage",
    "testplugin": "npm run testcompiler && npm run testruntime",
    "testcompiler": "jest -- tests/plugin/index.test.ts",
    "testruntime": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest -- tests/runtime/runtime.test.js",
    "testplugin-coverage": "npm run testcompiler && npm run testruntime && npm run testcompiler-coverage-only",
    "testcompiler-coverage-only": "jest --coverage --silent tests/plugin/index.test.ts",
    "test-dev": "npm run testcompiler-dev && npm run testruntime-dev",
    "testcompiler-dev": "jest -- tests/plugin/dev.test.ts",
    "testruntime-dev": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest -- tests/runtime/dev.test.js",
    "cleanup": "node cleanup.js",
    "finish": "node cleanup.js --finish",
    "testlint": "tslint -c tslint.json 'lib/*.ts'"
  },
  "files": [
    "dist",
    "types/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler.git"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es/index.js",
    "default": "./dist/cjs/index.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "handlebars",
    "hbs",
    "template",
    "partials",
    "helpers",
    "precompile"
  ],
  "author": "Johann Isaac",
  "license": "Mozilla Public License 2.0",
  "bugs": {
    "url": "https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler/issues"
  },
  "homepage": "https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler#readme",
  "peerDependencies": {
    "@rollup/plugin-commonjs": ">= 15.0.0",
    "@rollup/plugin-node-resolve": ">= 10.0.0",
    "handlebars": ">= 1.3.0 < 5",
    "rollup": "^2.78.0||^3.0.0||^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/js-beautify": "^1.14.3",
    "@types/node": "^22.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-beautify": "^1.15.1",
    "rollup": "^4.21.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "handlebars": ">= 1.3.0 < 5"
  }
}
