{
  "name": "rollup-plugin-handlebars-compiler",
  "version": "1.1.4",
  "description": "Rollup plugin to compile Handlebars templates to JavaScript with partials, helpers, and precompile options.",
  "scripts": {
    "build": "rollup --config",
    "dev": "rollup --config --watch --environment BUILD:development",
    "test": "npm run testlint && npm run test-jest",
    "test-jest": "npm run build-test-files && jest --coverage --verbose",
    "test-dev": "npm run test-compiler-transformer-dev && npm run test-compiler-runtime-dev",
    "testlint": "tslint -c tslint.json 'lib/*.ts'",
    "test-compiler": "npm run test-rollup-bundler && test-rollup-dist",
    "test-compiler-transformer": "jest -- tests/compiler/index.test.ts",
    "test-compiler-runtime": "jest -- tests/runtime/runtime.test.js",
    "test-rollup": "npm run test-rollup-bundler && test-rollup-dist",
    "test-rollup-bundler": "jest -- tests/rollup/index.test.ts",
    "test-rollup-dist": "jest -- tests/rollup/dist.test.ts",
    "build-test-files": "npm run generate-runtime-test-files && npm run generate-rollup-dist-files",
    "build-compiler-preparations": "rollup --config tests/compiler/rollup.config.cjs",
    "generate-runtime-test-files": "node tests/compiler/generate-runtime-test-files.cjs",
    "generate-rollup-dist-files": "tsx tests/rollup/generate-dist-files.ts",
    "test-admin": "npm run build-test-files-admin && jest --coverage --verbose",
    "test-jest-admin": "npm run build-test-files-admin && jest --coverage --verbose",
    "build-test-files-admin": "npm run build-compiler-preparations && npm run generate-runtime-test-files && npm run generate-rollup-dist-files",
    "test-compiler-transformer-dev": "jest --testNamePattern=(/__tests__/.*|(\\.|/)(dev.test)\\.[jt]sx?$ --testPathIgnorePatterns=''",
    "test-compiler-runtime-dev": "jest --testNamePattern=(/__tests__/.*|(\\.|/)(dev.test)\\.[jt]sx?$ --testPathIgnorePatterns=''",
    "build-dev-tests": "node build-dev-tests.cjs"
  },
  "files": [
    "dist",
    "types/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler.git"
  },
  "type": "module",
  "main": "./dist/es/index.js",
  "exports": {
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/es/index.js",
    "types": "./types/index.d.ts"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "handlebars",
    "hbs",
    "template",
    "partials",
    "helpers",
    "precompile"
  ],
  "author": "Johann Isaac",
  "license": "Mozilla Public License 2.0",
  "bugs": {
    "url": "https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler/issues"
  },
  "homepage": "https://github.com/JohannIsaac/rollup-plugin-handlebars-compiler#readme",
  "peerDependencies": {
    "@rollup/plugin-commonjs": ">= 15.0.0",
    "@rollup/plugin-node-resolve": ">= 10.0.0",
    "handlebars": ">= 1.3.0 < 5",
    "rollup": "^2.78.0||^3.0.0||^4.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/js-beautify": "^1.14.3",
    "@types/node": "^22.5.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-beautify": "^1.15.1",
    "rollup": "^4.21.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "tslint": "^6.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "handlebars": ">= 1.3.0 < 5"
  }
}
